.difference-patterns
  .chart_types-selector
    margin: 6px 20px 0 0
    width: 180px
    display: inline-block

.chart_types-selector
  position: relative
  width: 100%
  color: $gray
  z-index: 95
  font-size: 1em

  .input
    width: 100%
    height: 28px
    background-color: $lighter
    overflow: hidden
    border-radius: 5px
    cursor: pointer
    line-height: 2

    .input-selected
      width: calc(100% - 30px)
      padding: 0 10px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      display: inline-block
      box-sizing: border-box
      vertical-align: top

    .input-icon
      background: url('./cc_icons/ico_arrow_down_white.svg') 50% 50% no-repeat $light_blue
      width: 28px
      height: 28px
      border-left: 1px solid $white
      display: inline-block

  .checked
    color: $light_blue

  .item-name
    width: 100%
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    display: inline-block
    box-sizing: border-box
    padding: 5px 10px;

  .close
    height: 0

  .list
    position: absolute
    width: 100%
    list-style: none
    margin: 0
    padding: 0
    background-color: $white
    overflow: hidden
    box-shadow: 0 5px 15px -5px black
    border-radius: 0 0 7px 7px

  .list-item
    border-bottom: 1px solid $lighter

@media (max-width: $mobile_width)
  .difference-patterns
    .chart_types-selector
      width: 138px
      float: left
      margin: 6px 10px 6px 10px

@media (max-width: $mobile_s_width)
  .difference-patterns
    .chart_types-selector
      width: 123px
      margin: 6px 5px 6px 10px
