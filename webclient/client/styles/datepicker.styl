.charts-types
.realtime-screen
.difference-patterns
  .date-picker
    width: 170px
    display: inline-block
    vertical-align: top
    margin: 6px 20px 6px 0

.date-picker
  position: relative
  width: 100%
  color: $dark
  z-index: 95
  font-size: 1em

  .input
    width: 100%
    height: 28px
    background-color: $lighter
    overflow: hidden
    border-radius: 5px
    cursor: pointer
    line-height: 2

  .time-range
    width: calc(100% - 30px)
    padding: 0 5px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    display: inline-block
    box-sizing: border-box
    vertical-align: top

  .calendar-icon
    background: url('./cc_icons/ico_calendar.svg') 50% 50% no-repeat $light_blue
    width: 28px
    height: 28px
    border-left: 1px solid $white
    display: inline-block

@media (max-width: $mobile_width)
  .realtime-screen
  .charts-types
    .date-picker
      margin-left: 10px

  .difference-patterns
    .date-picker
      margin: 6px
      float: left


